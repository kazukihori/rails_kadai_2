<h1>施設情報の編集</h1>

<%= form_with model: @room, url: room_path, method: :patch do |f| %>
    <table>
    <tr>
        <th><%= f.label :name, "施設名" %></th>
        <td><%= f.text_field :name %></td>
    </tr>
    <tr>
        <th><%= f.label :room_introduction, "施設紹介" %></th>
        <td><%= f.text_area :room_introduction %></td>
    </tr>
    <tr>
        <th><%= f.label :price, "料金" %></th>
        <td><%= f.text_field :price %></td>
    </tr>
    <tr>
        <th><%= f.label :address, "住所" %></th>
        <td><%= f.text_field :address %></td>
    </tr>
    <tr>
        <th><%= f.label :room_img, "施設画像" %></th>
        <td><%= f.file_field :room_img %></td>
    </tr>
    </table>
  
    <div>
    <%= f.submit "編集を完了する" %>
    <%= link_to "登録施設一覧に戻る", rooms_index_path %>
<% end %>
